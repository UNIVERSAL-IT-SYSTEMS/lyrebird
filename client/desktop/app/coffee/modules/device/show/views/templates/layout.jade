.row

  .col-xs-12.m-b-1
    a.btn.btn-primary-outline.m-r-1( href='#devices' ) Back to Devices

    if handle.handle
      a.btn.btn-danger-outline.m-r-1( data-click='disconnect' ) Disconnect

      a.btn.btn-success-outline( data-click='load-firmware' ) Load Firmware

    else
      a.btn.btn-primary-outline( data-click='connect' ) Connect

  .col-xs-12
    .json-viewer
      pre
        for each in json
          span= each
